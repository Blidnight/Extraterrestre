{
    "compilerOptions": {
      "baseUrl": "./source",
      "target": "esnext",
      "module": "commonjs",
      "moduleResolution": "node",
      "resolveJsonModule": true,
      "strict": true,
      "strictNullChecks": false,
      "isolatedModules": false,
      "esModuleInterop": true,
      "allowSyntheticDefaultImports": true,
      "experimentalDecorators": true,
      "emitDecoratorMetadata": true,
    },
    "exclude": [
      "node_modules"
    ]
  }